<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/page7_background"
    android:weightSum="3">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="320dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/book"
        android:drawableSize="10dp"
        android:drawablePadding="10dp"
        android:text="测试结果："
        android:textColor="@color/text_color"
        android:textSize="20dp" />

    <Button
        android:id="@+id/botton1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="320dp"
        android:layout_toRightOf="@+id/text1"
        android:layout_weight="1"
        android:background="@drawable/transparentbutton"
        android:text="测一测"
        android:drawableLeft="@drawable/page5heartbutton"
        android:drawableSize="1dp"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"/>>

</RelativeLayout>