<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page4_background">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/page4logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />
    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/transparentbutton"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="心率 Heartrate"
        android:textColor="@color/text_color"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/transparentbutton"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="GPS定位 GPS Location"
        android:textColor="@color/text_color"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/transparentbutton"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="血压 Blood pressure"
        android:textColor="@color/text_color"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/page4logo2"
        android:id="@+id/button4"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/page4logo3"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />


</RelativeLayout>